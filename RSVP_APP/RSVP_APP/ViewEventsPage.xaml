<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVPApp.ViewEventsPage"
             Title="Events">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Events" FontSize="22" HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="All" Clicked="OnAllClicked" />
            <Button Text="Attending" Clicked="OnAttendingClicked" />
            <Button Text="Hosting" Clicked="OnHostingClicked" />
        </HorizontalStackLayout>

        <CollectionView x:Name="EventsList" SelectionMode="Single" SelectionChanged="OnEventSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="LightGray">
                        <Label Text="{Binding Name}" FontSize="16"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>
