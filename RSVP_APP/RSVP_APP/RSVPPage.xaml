<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVPApp.Views.RSVPPage"
             Title="RSVP">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="RSVP for Event" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Your Name" />
        <Entry x:Name="EmailEntry" Placeholder="Your Email" Keyboard="Email" />

        <Button Text="Save RSVP" Clicked="OnSaveClicked" />
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>
