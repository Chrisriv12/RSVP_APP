<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVPApp.AddEventPage"
             Title="Add Event">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            <Entry x:Name="HostEntry" Placeholder="Host" IsEnabled="False" />
            <Entry x:Name="NameEntry" Placeholder="Event Name" />
            <Entry x:Name="AddressEntry" Placeholder="Event Address" />
            <Entry x:Name="MaxEntry" Placeholder="Max Attendees" Keyboard="Numeric" />
            <DatePicker x:Name="DateEntry" />
            <DatePicker x:Name="DeadlineEntry" />

            <Button Text="Save Event" Clicked="OnSaveClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
