  <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:class="RSVPApp.Views.AddEventPage"  
             Title="Add Event">  

    <ScrollView>  
        <VerticalStackLayout Padding="30" Spacing="15">  
            <Label Text="Add New Event" FontSize="20" HorizontalOptions="Center" />  

            <Entry x:Name="EventNameEntry" Placeholder="Event Name" />  
            <Entry x:Name="EventDateEntry" Placeholder="Event Date (MM/DD/YYYY)" />  
            <Entry x:Name="EventTimeEntry" Placeholder="Event Time (HH:MM AM/PM)" />  
            <Entry x:Name="EventLocationEntry" Placeholder="Event Location" />  
            <Editor x:Name="EventDescriptionEditor" Placeholder="Event Description" HeightRequest="100" />  
            <Button Text="Add Event" Clicked="OnAddEventClicked" />  
            <Button Text="Cancel" Clicked="OnCancelClicked" />  
        </VerticalStackLayout>  
    </ScrollView>  
</ContentPage>            xmlns="http://schemas.microsoft.com/>dotnet/2021/maui"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
