<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVPApp.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Login to RSVP App" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Continue as Guest" Clicked="OnGuestClicked" />
        <Button Text="Create Account" Clicked="OnCreateClicked" />
    </VerticalStackLayout>
</ContentPage>
