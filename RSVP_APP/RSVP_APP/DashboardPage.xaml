<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVPApp.DashboardPage"
             Title="Dashboard">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Dashboard" FontSize="22" HorizontalOptions="Center" />
        <Label x:Name="WelcomeLabel" FontSize="16" />

        <Button Text="Add Event" Clicked="OnAddEventClicked" />
        <Button Text="View Events" Clicked="OnViewEventsClicked" />
        <Button Text="Logout" Clicked="OnLogoutClicked" />
    </VerticalStackLayout>
</ContentPage>
